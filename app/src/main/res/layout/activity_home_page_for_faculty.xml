<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context=".HomePageFacultyAndStudent.HomePageActivityForFaculty">


    <LinearLayout
        android:id="@+id/LinearFac"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"></LinearLayout>


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"

        android:layout_height="142dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_baseline_home_24"
            android:text="Home">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginRight="2dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_baseline_wifi_tethering_24"
            android:text="Live Event">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/CreatEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginRight="2dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_baseline_create_24"
            android:text="create Event">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/FacultyProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginRight="4dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_baseline_person_outline_24"
            android:text="profile">

        </androidx.appcompat.widget.AppCompatButton>
    </androidx.appcompat.widget.Toolbar>

</LinearLayout>